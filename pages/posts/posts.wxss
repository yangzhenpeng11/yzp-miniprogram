/* pages/posts/posts.wxss */
swiper{
  width: 100%;
  height: 600rpx;
}

swiper image{
  width: 100%;
  height: 600rpx;
}

.post-container{
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;
  padding-bottom: 20rpx;
}

.post-author-date{
  margin: 10rpx 0 20rpx 20rpx;
}

.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border: 1rpx solid red;
  border-radius: 50%;
}

.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5rpx;
  font-size: 26rpx;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-left: 10px;
}

.post-image{
  margin-left: 16rpx;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-image{
  width: 16px;
  height: 16px;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 8px;
}

.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
}
