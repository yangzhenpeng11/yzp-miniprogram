/* pages/movie-detail/movie-detail.wxss */
page{
  background-color: #f7f7f7;
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: flex-start;
  padding: 0;
  position: relative;
}

.head-img-container{
  width: 100%;
  height: 320rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.head-img{
  width: 100%;
  height: 750rpx;
  /* -webkit-filter: blur(90rpx); */
  position: absolute;
  z-index: -10;
}

.movie-img{
  width: 250rpx;
  height: 350rpx;
  position: absolute;
  z-index: -1;
  top: 150rpx;
  right: 30rpx;
}

.head-img-hover{
  margin-top: 50rpx;
}